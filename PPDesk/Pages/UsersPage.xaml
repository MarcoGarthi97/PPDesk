<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PPDesk.Pages.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPDesk.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" 
    xmlns:vm="using:PPDesk.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtri -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Campo Nome completo -->
            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Nome completo" Margin="0,0,0,5"/>
                <TextBox Text="{Binding FullNameFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         PlaceholderText="Inserisci nome completo"/>
            </StackPanel>

            <!-- Campo Telefono -->
            <StackPanel Grid.Column="1" Margin="5,0,5,0">
                <TextBlock Text="Telefono" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PhoneFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         PlaceholderText="Inserisci telefono"/>
            </StackPanel>

            <!-- Campo Email -->
            <StackPanel Grid.Column="2" Margin="5,0,5,0">
                <TextBlock Text="Email" Margin="0,0,0,5"/>
                <TextBox Text="{Binding EmailFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         PlaceholderText="Inserisci email"/>
            </StackPanel>

            <!-- Pulsanti per i filtri -->
            <Button Grid.Column="3" Content="Applica" 
                    Click="FilterButton_Click"
                    Margin="5,25,5,0"/>
        </Grid>

        <!-- Pulsante carica utenti -->
        <Button Content="Carica Utenti"
            Command="{Binding LoadUsersCommand}"
            HorizontalAlignment="Left"
            Grid.Row="1"/>

        <!-- Tabella utenti -->
        <controls:DataGrid Grid.Row="2"
            ItemsSource="{Binding Users}"
            AutoGenerateColumns="False"
            Margin="0,10,0,0">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Nome" Binding="{Binding FirstName}" />
                <controls:DataGridTextColumn Header="Cognome"  Binding="{Binding LastName}" />
                <controls:DataGridTextColumn Header="Telefono" Binding="{Binding CellPhone}" />
                <controls:DataGridTextColumn Header="Email"      Binding="{Binding Email}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <!-- Paginazione -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="PrevButton" Content="Previous" Click="PrevButton_Click" Margin="0,0,10,0" />
            <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Text="Pagina 1" />
            <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Page>
