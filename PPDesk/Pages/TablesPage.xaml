<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PPDesk.Pages.TablesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPDesk.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--<StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Nome completo" Margin="0,0,0,5"/>
                <TextBox Text="{Binding FullNameFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Inserisci nome completo"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0,5,0">
                <TextBlock Text="Telefono" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PhoneFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Inserisci telefono"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="5,0,5,0">
                <TextBlock Text="Email" Margin="0,0,0,5"/>
                <TextBox Text="{Binding EmailFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     PlaceholderText="Inserisci email"/>
            </StackPanel>-->

            <Button Grid.Column="3" Content="Applica" 
                Click="FilterButton_Click"
                Margin="5,25,5,0"/>
        </Grid>

        <controls:DataGrid Grid.Row="2"
        ItemsSource="{Binding Tables}"
        AutoGenerateColumns="False"
        Margin="0,10,0,0"
        Sorting="DataGrid_Sorting">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Name evento" Tag="EventName" Binding="{Binding EventName}" />
                <controls:DataGridTextColumn Header="Stato evento" Tag="EventStatus" Binding="{Binding EventStatus}" />
                <controls:DataGridTextColumn Header="Name GDR" Tag="GdrName" Binding="{Binding GdrName}" />
                <controls:DataGridTextColumn Header="Master" Tag="Master" Binding="{Binding Master}" />
                <controls:DataGridTextColumn Header="CapacitÃ " Tag="Capacity" Binding="{Binding Capacity}" />
                <controls:DataGridTextColumn Header="Posti prenotati" Tag="QuantitySold" Binding="{Binding QuantitySold}" />
                <controls:DataGridTextColumn Header="Data inizio" Tag="StartDate" Binding="{Binding StartDate}" />
                <controls:DataGridTextColumn Header="Data fine" Tag="EndDate" Binding="{Binding EndDate}" />
                <controls:DataGridTextColumn Header="Tipologia" Tag="TableType" Binding="{Binding TableType}" />

            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   Text="{Binding TotalRecordsText}" 
                   x:Name="RecordsCountText"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrevButton" Content="Indietro" Click="PrevButton_Click" Margin="0,0,10,0" />
                <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Text="{Binding PageText}" />
                <Button x:Name="NextButton" Content="Avanti" Click="NextButton_Click" Margin="10,0,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
